{
  "name": "axp-dev/dribbble-api",
  "description": "Simple PHP library for dribbble API v2",
  "homepage": "https://github.com/axp-dev/dribbble-api",
  "keywords": ["dribbble","library","api"],
  "version": "2.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Pushkarev",
      "email": "axp-dev@yandex.com",
      "homepage": "https://github.com/axp-dev"
    }
  ],
  "scripts": {
    "lint": "vendor/bin/phpcs --standard=ruleset.xml ./src",
    "lint-fix": "vendor/bin/phpcbf --standard=ruleset.xml ./src",
    "code-analyze": "vendor/bin/phan --color",
    "code-analyze-report": "vendor/bin/phan -m build/logs/checkstyle.cs"
  },
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.4.3",
    "psr/http-message": "^1.0.1",
    "json-mapper/json-mapper": "^2.14.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.7.1",
    "phan/phan": "^5.4.1"
  },
  "autoload": {
    "psr-4": {
      "AXP\\DribbbleApi\\": "src"
    }
  },
  "minimum-stability": "dev"
}